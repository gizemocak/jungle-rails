<div class="panel panel-default items">
  <table class="table table-bordered">
    <thead>
      <tr>
        <th colspan="2">Product</th>
        <th>Quantity</th>
        <th>Item Total</th>
      </tr>
    </thead>

    <tbody>
      <% @order_total = 0 %>
      <% @order.line_items.each do |l| %>
        <%= render 'item', line_item: l %>
      <% end %>
    </tbody>

    <tfoot>
      <tr>
        <th colspan="3">
          TOTAL:
        </th>
        <th>
          <%= @order_total %>
        </th>
      </tr>
    </tfoot>
  </table>
</div>